{{>header}}
{{>barra}}
<div class="contenedor">
    <main class="contenido-principal">
        <div class="contenedor-formulario">
            <h1 class="headerTuanis mb-4">Crear Cuenta</h1>
            <form id="formulario" method="POST" action="/crear-cuenta" class="caja-login">
                {{#if bMessage}}
                <span style="font-size: 14px;"
                    class="badge badge-pill badge-danger p-3 mb-4 text-dark">{{bMessage}}</span>
                {{/if}}
                <div class="form-group">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                        <input id="usuario" name="username" type="text" class="form-control" placeholder="Usuario"
                            aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                    <input name="user_password" class="form-control" id="user_password"
                        placeholder="ContraseÃ±a">
                </div>
                <div class="mt-4 campo enviar">
                    <input type="hidden" id="tipo" value="crear">
                    <input type="submit" class="btn btn-dark" value="Crear cuenta">
                </div>
            </form>
        </div>
    </main>
</div>
{{>footer}}
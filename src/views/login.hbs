                <h1 class="headerTuanis mb-4">Dental Task <span>Drs.Maroto</span></h1>
                <form id="formulario" method="POST" action="/login" class="caja-login" autocomplete="off">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                        <input id="usuario" name="username" type="text" class="form-control" placeholder="Usuario"
                            aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                        <input type="password" name="user_password" class="form-control" id="user_password"
                            placeholder="Contraseña">
                    </div>
                    <div class="flex">
                        <div class="mt-4 campo enviar">
                            <input type="hidden" id="tipo" value="login">
                            <input type="submit" class="btn btn-dark" value="Iniciar Sesión">
                        </div>
                    </div>
                </form> 
                {{#if gMessage}}
                    <span style="font-size: 1.8rem; display:block; margin:0 auto;" class="badge badge-pill badge-success p-3 mb-4 text-dark">{{gMessage}}</span>
                {{/if}}
                {{#if bMessage}}
                    <span style="font-size: 1.2rem; display:block; margin:1rem auto;" class="badge badge-pill badge-danger p-3 mb-4 text-dark">{{bMessage}}</span>
                {{/if}}     
            </div>

        </main>            
    </div>  
{{>footer}}